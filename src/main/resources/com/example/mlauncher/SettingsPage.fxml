<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #E0E0E0;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mlauncher.controller.SettingsPageController">
   <children>
      <VBox prefHeight="400.0" prefWidth="200.0" spacing="6.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="40.0" prefWidth="194.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="49.0" text="BE builds" />
                  <Slider fx:id="beBuildsSlider" blockIncrement="1.0" prefHeight="54.0" prefWidth="145.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="194.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="49.0" text="Versions" />
                  <Slider fx:id="buildsSlider" blockIncrement="1.0" min="1.0" prefHeight="54.0" prefWidth="145.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="198.0" text="Versions folder" textAlignment="CENTER" />
            <HBox prefWidth="200.0">
               <children>
                  <TextField fx:id="pathTextField" prefHeight="25.0" />
                  <Button fx:id="pathOpenButton" mnemonicParsing="false" prefHeight="25.0" style="-fx-background-color: #9ACD32;" text="Open" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="6.0" />
         </padding>
      </VBox>
      <Button fx:id="resetButton" mnemonicParsing="false" style="-fx-background-color: #9ACD32;" text="Reset settings" AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="6.0" />
   </children>
</AnchorPane>
